html  
  head
    title=title
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )

  body
  nav(class='navbar navbar-inverse' style='background-color: rgba(4, 4, 5, 1)')
      div(class='container-fluid')
        ul(class='nav navbar-nav')
          li <a href='/'>Home</a>
          li <a href='/checkin'>Checkin</a>
          li(class='active') <a href='/user'>User</a>
          li <a href='/fine'>Fine</a>  

  form(method = 'GET' action='/user') 
    //- label Fill in the form
    div
        table
            tbody
                tr
                    td: label SSN 
                    td: input(type='text' name='myssn' maxlength=9 required=true)
                tr    
                    td: label First Name
                    td: input(type = 'text', name = 'myfname', maxlength=250 required=true)
                tr
                    td: label Last Name
                    td: input(type = 'text', name = 'mylname', maxlength=250 required=true)
                tr
                    td: label  Address
                    td: input(type = 'text', name = 'myaddress' maxlength=250 required=true)
                tr
                    td: label  City
                    td: input(type = 'text', name = 'mycity' maxlength=250 required=true)
                tr
                    td: label  State
                    td: input(type = 'text', name = 'mystate' maxlength=250 required=true)
                tr
                    td: label  Phone
                    td: input(type = 'text', name = 'myphone' maxlength=12 required=true)
                tr
                    td: input(type = 'hidden', name = 'submit_flag' value=1)
    div
        input(type = 'submit' value='Add User')
    -if(txn_msg != undefined) 
        h1=txn_msg