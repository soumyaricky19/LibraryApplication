html  
  head
    title=title
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )

  body
  nav(class='navbar navbar-inverse' style='background-color: rgba(0, 0, 0, 1)')
      div(class='container-fluid')
        ul(class='nav navbar-nav')
          li <a href='/'>Home</a>
          li <a href='/checkin'>Checkin</a>
          li <a href='/user'>User</a>
          li <a href='/fine'>Fine</a>

  div
  -if(message != undefined){
      h4="Book details:-"
        h3="ISBN: "+message[0].isbn
        img(src = message[0].cover)
        h4="TITLE: "+message[0].title
        h4="NAME: "+message[0].name 
        h4="PUBLISHER: "+message[0].publisher
        h4="PAGES: "+message[0].pages
        
      -if(message[0].available <= 0)
          h5="Note: The book is not available for checkout"    

      div
      form(method = 'GET' action='/checkout')
        label Card ID
        input(type = 'hidden', name = 'myisbn' value=message[0].isbn)
        input(type = 'hidden', name = 'submit_flag' value=1)
        input(type = 'text', name = 'mycard')
        input(type = 'submit' value='Submit' )
  -}
        

  div
  -if(txn_msg != undefined)
    h1=txn_msg
    