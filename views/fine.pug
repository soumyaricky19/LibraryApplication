html  
  head
    title= title
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )


  body  
  nav(class='navbar navbar-inverse' style='background-color: rgba(4, 4, 5, 1)')
      div(class='container-fluid')
        ul(class='nav navbar-nav')
          li <a href='/'>Home</a>
          li <a href='/checkin'>Checkin</a>
          li <a href='/user'>User</a>
          li(class='active') <a href='/fine'>Fine</a>

  h1=txn_msg
  div
    form(method = 'GET' action='/fine')
      input(type = 'submit' value='Refresh')
      input(type = 'hidden' name = 'refresh_flag' value=1)

  div
    form(method = 'GET' action='/fine')
      input(type = 'submit' value='View history')
      input(type = 'hidden' name = 'paid_flag' value=1)    

  div
      -if(message == '' || message == undefined || message[0].card_id == null)
        h1="No fine data"
      -else{
        form(method = 'GET' action='/fine')
          -if (history_flag != '1'){
            input(type = 'hidden' name = 'submit_flag' value=1)    
            input(type = 'submit' value='Pay' )
          -}

          table.table(class='table-bordered')
            thead
              tr
                th CARD_ID
                -if(history_flag != '1'){
                  th TOTAL FINE
                  th PAYABLE FINE
                  th PAY
                -}else
                  th FINE PAID
            tbody
              each rows in message
                tr
                  td #{rows.card_id} 
                  td #{rows.sum} 
                  -if (history_flag != '1'){
                    td #{rows.to_pay}
                    td
                      input(type="radio", name="mycardid", value=rows.card_id)
                  -}
          -if (history_flag != '1')
            input(type = 'submit' value='Pay')
      -}       
  